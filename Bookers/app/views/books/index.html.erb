<html>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <% end %>
        <td><a href="">Show</a></td>
        <td><a href="">Edit</a></td>
        <td><a href="">Destroy</a></td>
      </tr>
     
      
    </tbody>
  </table>
  
  <h2>New book</h2>
    
  <%= form_with model: @book, local:true do |f| %>
     
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book' %>
  <% end %>
   
</html>
